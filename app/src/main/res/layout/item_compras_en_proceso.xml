<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_imagen_producto"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/descripcionImagen"
            android:src="@drawable/icono_fastfood" />


        <TextView
            android:id="@+id/tv_nombre_producto"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/nombreProducto2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nombre_empresa"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:fontFamily="@font/poppins_light"
            android:text="@string/nombre"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_total_producto"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombre_empresa"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:fontFamily="@font/poppins_light"
            android:text="@string/totalProducto"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_total_producto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombre_empresa"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_total_producto"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_cantidad_producto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_producto"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:fontFamily="@font/poppins_light"
            android:text="@string/cantidad"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_cantidad_producto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_producto"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_cantidad_producto"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:layout_below="@+id/img_imagen_producto"
            android:layout_marginTop="7dp"
            android:background="#F7F8F8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ver_mas_producto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="#F7F8F8"
                android:contentDescription="@string/descripcionImagen"
                android:fontFamily="@font/poppins_semibold"
                android:paddingRight="5dp"
                android:src="@drawable/search_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_cancelar_producto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:background="#F7F8F8"
                android:contentDescription="@string/descripcionImagen"
                android:fontFamily="@font/poppins_semibold"

                android:src="@drawable/cancel_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_estado_solicitud"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_imagen_producto"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:background="@color/newRed"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/estado"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>