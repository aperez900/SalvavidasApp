<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_imagen_producto"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:contentDescription="@string/descripcionImagen"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_porc_descuento"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@color/red"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signo_porc"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/tv_porc_descuento"
            android:background="@color/red"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="@string/porcDescuentoProducto"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nombre_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@color/red"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="@string/nombreProducto2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_disponibilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/icono_clock_black" />

        <TextView
            android:id="@+id/tv_fecha_inicio_producto"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_toEndOf="@id/img_disponibilidad"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="@string/inicio"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fecha_fin_producto"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_toEndOf="@id/tv_fecha_inicio_producto"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="@string/fin"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_toEndOf="@id/tv_fecha_fin_producto"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/icono_restaurant" />

        <TextView
            android:id="@+id/tv_nombre_empresa"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_toEndOf="@id/img_restaurant"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_total_producto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fecha_inicio_producto"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/icono_money" />

        <TextView
            android:id="@+id/tv_signo_moneda3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_fecha_inicio_producto"
            android:layout_toEndOf="@id/img_total_producto1"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="@string/signoMoneda"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_producto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_fecha_inicio_producto"
            android:layout_toEndOf="@id/tv_signo_moneda3"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text=""
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_restaurant"
            android:layout_toEndOf="@id/tv_total_producto"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/icono_near_me" />

        <TextView
            android:id="@+id/tv_distancia"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_nombre_empresa"
            android:layout_toEndOf="@id/img_distancia"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>