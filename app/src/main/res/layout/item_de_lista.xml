<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tipo_producto"
            android:layout_width="377dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:background="#EDEDED"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="Tipo de producto"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/img_imagen_producto"
            android:layout_width="186dp"
            android:layout_height="147dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/tv_tipo_producto"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_nombre_producto"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="Nombre del producto"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:layout_below="@id/tv_tipo_producto"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/tv_descripcion_producto"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_light"
            android:padding="5dp"
            android:text="Descripcion"
            android:textSize="14sp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/tv_precio_producto"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_light"
            android:padding="5dp"
            android:text="Precio"
            android:textSize="14sp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:layout_below="@id/tv_descripcion_producto"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/tv_fecha_inicio_producto"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_light"
            android:padding="5dp"
            android:text="Inicio"
            android:textSize="14sp"
            android:layout_toEndOf="@id/img_imagen_producto"
            android:layout_below="@id/tv_precio_producto"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tv_fecha_fin_producto"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_light"
            android:padding="5dp"
            android:text="Fin"
            android:textSize="14sp"
            android:layout_toEndOf="@id/tv_fecha_inicio_producto"
            android:layout_below="@id/tv_precio_producto" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>