<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="296dp">

        <ImageView
            android:id="@+id/img_imagen_producto"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:contentDescription="@string/descripcionImagen"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_porc_descuento"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:background="@color/red"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signo_porc"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/tv_porc_descuento"
            android:background="@color/red"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="@string/porcDescuentoProducto"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nombre_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            android:background="@color/red"
            android:fontFamily="@font/poppins_bold"
            android:padding="5dp"
            android:text="@string/nombreProducto2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_disponibilidad"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/descripcionImagen"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/clockt"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_fecha_inicio_producto"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@id/img_disponibilidad"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="@string/inicio"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_fecha_fin_producto"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@id/tv_fecha_inicio_producto"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text="@string/fin"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/img_restaurant"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="1dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@id/tv_fecha_fin_producto"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/shopping" />

        <TextView
            android:id="@+id/tv_nombre_empresa"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_nombre_producto"
            android:layout_marginStart="-17dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@id/img_restaurant"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img_total_producto1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_fecha_inicio_producto"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="2dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/corazon" />

        <TextView
            android:id="@+id/tv_signo_moneda3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fecha_inicio_producto"
            android:layout_marginStart="84dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/img_total_producto1"
            android:fontFamily="@font/poppins_semibold"
            android:padding="2dp"
            android:text="@string/signoMoneda"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fecha_inicio_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="284dp"
            android:fontFamily="@font/poppins_light"
            android:text="Precio"
            android:textAlignment="textStart"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_fecha_inicio_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-39dp"
            android:layout_marginEnd="286dp"
            android:fontFamily="@font/poppins_light"
            android:padding="2dp"
            android:text="Fecha inicio"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_fecha_inicio_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="109dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="170dp"
            android:fontFamily="@font/poppins_light"
            android:padding="2dp"
            android:text="Fecha Fin"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_fecha_inicio_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="210dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/poppins_light"
            android:padding="2dp"
            android:text="Establecimiento"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_producto"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fecha_inicio_producto"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/tv_signo_moneda3"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:text=""
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_distancia"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/img_restaurant"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/tv_total_producto"
            android:contentDescription="@string/descripcionImagen"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:srcCompat="@drawable/icono_near_me" />

        <TextView
            android:id="@+id/tv_distancia"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_below="@id/tv_nombre_empresa"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/img_distancia"
            android:fontFamily="@font/poppins_semibold"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>